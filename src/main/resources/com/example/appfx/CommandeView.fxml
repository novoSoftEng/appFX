<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CommandeController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" >
          <fx:include source="TopView.fxml"/>
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
          <Label text="ID Client" />
          <TextField fx:id="id_client"/>
          <Label text="Date Commande" />
          <DatePicker fx:id="DateCommande"/>


          <Button fx:id="ok" onAction="#onSaveButtonClick" text="Save!" />
          <TableView fx:id="mytab" prefHeight="200.0" prefWidth="200.0">
              <columns>
                  <TableColumn fx:id="col_id" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="col_client" prefWidth="75.0" text="ID Client" />
                  <TableColumn fx:id="col_date" prefWidth="75.0" text="Date Commande" />
                  <TableColumn fx:id="col_delete" prefWidth="75.0" text="Delete" />
                  <TableColumn fx:id="col_update" prefWidth="75.0" text="Update" />
              </columns>
          </TableView>
      </VBox>

   </children>
</AnchorPane>
